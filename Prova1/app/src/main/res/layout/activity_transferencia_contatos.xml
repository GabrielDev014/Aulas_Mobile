<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferenciaContatos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="15dp"
            android:text="Para quem você quer transferir"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/exibirValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text=""
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:text="Encontre um contato na sua lista ou inicie uma nova transferência"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="23dp"
            android:hint="Nome, CPF/CPNJ ou chave Pix"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp"
            android:text="Contatos frequentes"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botaoContato"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:paddingBottom="14dp"
                android:backgroundTint="#D3D3D3"
                android:drawableBottom="@drawable/contato"
                app:cornerRadius="90dp"/>
            <Button
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:paddingBottom="14dp"
                android:backgroundTint="#D3D3D3"
                android:drawableBottom="@drawable/contato"
                app:cornerRadius="90dp"/>
            <Button
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:paddingBottom="14dp"
                android:backgroundTint="#D3D3D3"
                android:drawableBottom="@drawable/contato"
                app:cornerRadius="90dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Prof. Igor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Prof. Luiz"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Prof. Talon"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Todos os contatos"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:paddingBottom="14dp"
                android:backgroundTint="#D3D3D3"
                android:drawableBottom="@drawable/contato"
                app:cornerRadius="90dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:text="Everson Zóio"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:paddingBottom="14dp"
                android:backgroundTint="#D3D3D3"
                android:drawableBottom="@drawable/contato"
                app:cornerRadius="90dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:text="Jair M. Bolsonaro"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:paddingBottom="14dp"
                android:backgroundTint="#D3D3D3"
                android:drawableBottom="@drawable/contato"
                app:cornerRadius="90dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:text="Galo cego"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>