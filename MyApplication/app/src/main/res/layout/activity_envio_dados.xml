<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TelaEnvioDados"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnvioDados">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transferência de informações"
        android:textSize="26sp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:textColor="#8B0000"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/envioDados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Digite a informação aqui"/>

    <Button
        android:id="@+id/EnvioInformacoes"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:text="Enviar informações"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:cornerRadius="0dp"
        android:backgroundTint="#ff0000"/>

</LinearLayout>